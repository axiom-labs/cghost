// Variables
var x = 10;
assert(x == 10, "variables can be assigned values.");

var message =
"hello world";
assert(message == "hello world", "new lines are ignored during variable assignment.");

x = 100;
assert(x == 100, "declared variables can be reassigned values.");

var x = 10;
{
    var x = 100;
}
assert(x == 10, "variables have a separate lexical scope within blocks.");

class testClass
{
    constructor()
    {
        this.message = "Hello world!";
    }

    foobar()
    {
        return this.message;
    }
}

var testClass = testClass();
assert(testClass.foobar() == "Hello world!", "Class methods can return field values.");

function returnMessage()
{
    return "Hello world!";
}

assert(returnMessage() == "Hello world!", "Functions can return values.");

print("All tests passed!");